<Window x:Class="LibraryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Management" Height="500" Width="800" MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen" Background="#F3F3F3">

    <DockPanel>
        <!-- NAVIGATION BAR -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2C3E50" Height="50">
            <Button Content="Home" Click="GoToHomePage" Margin="10" Padding="10,5" FontWeight="Bold" Foreground="White" Background="Transparent"/>
            <Button Content="Books" Click="GoToBooksPage" Margin="10" Padding="10,5" FontWeight="Bold" Foreground="White" Background="Transparent"/>
            <Button Content="Members" Click="GoToMembersPage" Margin="10" Padding="10,5" FontWeight="Bold" Foreground="White" Background="Transparent"/>
        </StackPanel>

        <!-- CONTENT FRAME -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Background="White"/>
    </DockPanel>
</Window>