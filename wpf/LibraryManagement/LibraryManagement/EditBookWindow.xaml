<Window x:Class="LibraryManagement.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Title:" />
            <TextBox x:Name="TitleBox" Margin="5" />

            <TextBlock Text="Author:" Margin="0,10,0,0"/>
            <TextBox x:Name="AuthorBox" Margin="5" />

            <TextBlock Text="Year:" Margin="0,10,0,0"/>
            <TextBox x:Name="YearBox" Margin="5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" Click="Save_Click" Width="75" Margin="5"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="75" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>