<Page x:Class="LibraryManagement.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Books Page">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Books List" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- DataGrid to Display Books -->
            <DataGrid x:Name="BookGrid" AutoGenerateColumns="False" Height="300" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons for Add, Edit, Delete -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Add Book" Click="Add_Book" Margin="5"/>
                <Button Content="Edit Book" Click="Edit_Book" Margin="5"/>
                <Button Content="Delete Book" Click="Delete_Book" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>