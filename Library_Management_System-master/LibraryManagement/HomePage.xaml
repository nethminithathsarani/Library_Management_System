<Page x:Class="LibraryManagement.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">

    <Grid>
        <StackPanel>
            <!-- Welcome Section with Background Image -->
            <Border Margin="10" Padding="10" CornerRadius="10" Height="300">
                <!-- Increased height -->
                <Border.Background>
                    <!-- Set the background image using ImageBrush -->
                    <ImageBrush ImageSource="C:\Users\nethm\Desktop\Library_Management_System-master (1)\homeLibrary.jpg" Stretch="UniformToFill"/>
                </Border.Background>
                <TextBlock Text="Welcome to the Library" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            </Border>

            <!-- All Books Section -->
            <TextBlock Text="All Books" FontSize="18" FontWeight="Bold" Margin="10"/>
            <ListView Name="AllBooksList" Height="200" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="150"/>
                        <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="150"/>
                        <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Popular Books Section -->
            <TextBlock Text="Popular Books" FontSize="18" FontWeight="Bold" Margin="10"/>
            <ListView Name="PopularBooksList" Height="200" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="150"/>
                        <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="150"/>
                        <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>