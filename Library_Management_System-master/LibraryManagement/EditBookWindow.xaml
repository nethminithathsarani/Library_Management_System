<Window x:Class="LibraryManagement.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Title:"/>
            <TextBox Name="TitleBox"/>
            <TextBlock Text="Author:"/>
            <TextBox Name="AuthorBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Save" Click="Save_Click" Width="70"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="70"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
