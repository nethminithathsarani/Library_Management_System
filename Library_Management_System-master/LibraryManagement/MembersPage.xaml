<Page x:Class="LibraryManagement.MembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Members Page">

    <Grid>
        <StackPanel>
            <TextBlock Text="Members Management" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <ListView Name="MemberGrid" Height="200">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Add Member" Click="Add_Member" Margin="5"/>
                <Button Content="Edit Member" Click="Edit_Member" Margin="5"/>
                <Button Content="Delete Member" Click="Delete_Member" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
