<Window x:Class="LibraryManagement.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Member" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="NameBox" Margin="5" />

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailBox" Margin="5" />

            <TextBlock Text="Phone Number:" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox" Margin="5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" Click="Save_Click" Width="75" Margin="5"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="75" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>