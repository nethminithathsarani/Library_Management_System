<Window x:Class="LibraryManagement.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Member" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name" />
            <TextBox x:Name="NameTextBox" Margin="5" />

            <TextBlock Text="Email" />
            <TextBox x:Name="EmailTextBox" Margin="5" />

            <TextBlock Text="Phone Number" />
            <TextBox x:Name="PhoneNumberTextBox" Margin="5" />

            <Button Content="Add Member" HorizontalAlignment="Right" Margin="10" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
