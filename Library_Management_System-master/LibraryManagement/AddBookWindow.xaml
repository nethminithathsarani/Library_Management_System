<Window x:Class="LibraryManagement.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Book" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Title" />
            <TextBox x:Name="TitleTextBox" Margin="5" />

            <TextBlock Text="Author" />
            <TextBox x:Name="AuthorTextBox" Margin="5" />

            <TextBlock Text="Year" />
            <TextBox x:Name="YearTextBox" Margin="5" />

            <Button Content="Add Book" HorizontalAlignment="Right" Margin="10" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
