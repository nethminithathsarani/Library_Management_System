<Page x:Class="LibraryManagement.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">

    <Grid>
        <StackPanel>
            <!-- Header Image -->


            <!-- Popular Books Section -->
            <TextBlock Text="Popular Books" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ListView x:Name="PopularBooksList" Height="200" HorizontalAlignment="Center">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="200" Margin="10">
                            <Image Source="{Binding Image}" Height="150" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Author}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- All Books Section -->
            <TextBlock Text="All Books" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <ListView x:Name="AllBooksList" Height="200" HorizontalAlignment="Center">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="200" Margin="10">
                            <Image Source="{Binding Image}" Height="150" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Author}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>